
<div class="container" id="containerb">

<p class="attn">Listing models</p><br>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Hair color</th>
      <th>Eyes</th>
      <th>Bust</th>
      <th>Waist</th>
      <th>Hips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.firstname %></td>
        <td><%= model.lastname %></td>
        <td><%= model.haircolor %></td>
        <td><%= model.eyes %></td>
        <td><%= model.bust %></td>
        <td><%= model.waist %></td>
        <td><%= model.hips %></td>
        <td><%= link_to 'Show', model %></td>

        <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_model_path(model), class: "linktext"  %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone' }, class: "linkdanger"  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Model', new_model_path %>

</div>