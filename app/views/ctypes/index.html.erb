
<div class="container" id="containerb">

<p class="attn"> All Photography Categories </p>

<table class="table table-condensed">

  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ctypes.each do |ctype| %>
      <tr>
        <td><%= ctype.name %></td>
        <td><%= link_to 'Show', ctype, class: "linktext" %></td>
        <td><%= link_to 'Edit', edit_ctype_path(ctype), class: "linktext" %></td>
        <td><%= link_to 'Destroy', ctype, method: :delete, data: { confirm: 'Are you sure?' }, class: "linkdanger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New type of Category', new_ctype_path %>

</div>