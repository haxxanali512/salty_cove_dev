
<div class="container" id="containerb">

<p class="attn">Client Index (<%= @clients.count %>)</p> <br>




<table class="table table-hover table-condensed">
<thead> 
    <tr>
      <th>Client name</th>
      <th># of Projects</th>
      <th>Email address</th>
      <th>Phone Number</th>
      <th>Edit</th>
      <th>Delete</th>
    
    </tr>
  </thead>


    <tbody> 
     <% @clients.each do |client| %>
    <tr>
    <td><%= link_to client.name, client_path(client), class: "linktext" %></td>
    <td><%= client.projects.count %></td>
    <td><%= client.email %></td>
    <td><%= client.phonenumber %></td>

<% if admin_signed_in? && !client_signed_in? %>
  <td><%= link_to "edit", edit_client_path(client), class: "linktext" %></td>    
  <td><%= link_to "delete", client, method: :delete, data: { confirm: "Are you sure? This action cannot be undone." }, class: "linkdanger" %></td>
<% end %>
    </tr>
    </tbody>
  
  <% end %>
</table>

<%= will_paginate %>

</div>