
<div class="container" id="containerb">

<p class="attn">Listing Projects</p><br>
<%= form_tag transform_projects_path, method: :patch do %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Project ID</th>
      <th>Project date</th>
      <th>Category</th>
      <th>Status</th>
      <th>Client ID</th>
      <th>Featured</th>
      <th>Feature?</th>
      <th> colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |x| %>
      <tr>
        <td><%= x.client.name %></td>
        <td><%= x.id %></td>
        <td><%= x.date %></td>
        <td><%= x.ctype %></td>
        <td><%= x.status %></td>
        <td><%= x.client_id %></td>
        <td><%= t x.is_featured.class %></td>
        <td><%= check_box_tag 'showreel[]', x.id %></td>




      </tr>

    <% end %>


  </tbody>
</table>

<br>




</ul>


</br>
<%= submit_tag "Set as featured", class: "btn btn-success btn-sm" %>
<% end %>



</div>
</div>

